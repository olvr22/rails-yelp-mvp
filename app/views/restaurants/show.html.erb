<h1> <%= @restaurant.name %></h1>
<ul>
  <li> <b>Category:</b> <%= @restaurant.category %> </li>
  <li> <b>Address:</b> <%= @restaurant.address %> </li>
</ul>

<%= link_to "Back to overview", root_path, class: "btn btn-primary mb-2" %>

<p><strong>Rating:</strong> <%= @restaurant.reviews.average(:rating).to_f.round(2) %></p>

<p><strong>Reviews</strong></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %></li>
  <% end %>
</ul>

<h3 class="mt-3">Add your review!</h3>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit "Submit review", class: "btn btn-primary" %>
<% end %>
